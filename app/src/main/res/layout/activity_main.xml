<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.lujuan.first.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.lujuan.first.TitleLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="公司名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyName" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/companyNameInput" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="面试阶段："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interviewStage" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/interviewStageInput" />
    </LinearLayout>

    <Button
        android:id="@+id/interviewFeedback"
        android:text="反馈面试结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:text="查看已记录面试结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedbackView"
        android:layout_gravity="center"/>


</LinearLayout>


